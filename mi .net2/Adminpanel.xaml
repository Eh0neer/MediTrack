<Window x:Class="mi.net2.Adminpanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:mi.net2"
        mc:Ignorable="d"
        Title="Админ панель" Height="450" Width="800" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Background="LightGray">
    <Grid>
        <TextBlock Text="Регистрация новых пользователей" FontSize="30" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,19,0,357" />
        <TextBlock Text="Логин" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="150,0,0,0" RenderTransformOrigin="6.331,1.129"/>
        <TextBlock Text="Пароль" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,239,0,0"/>
        <TextBox x:Name="PasswordBox" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="239,239,0,0" Width="418"/>
        <TextBox x:Name="LoginBox" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="239,0,0,0" Width="419" />
        <Button x:Name="save_pas" Grid.Row="0" Content="Сохранить" Foreground="Black" Background="GhostWhite" BorderBrush="Black" BorderThickness="1" Margin="32,381,32,10" Click="save_pas_Click" RenderTransformOrigin="0.548,-0.128"/>
    </Grid>
</Window>
