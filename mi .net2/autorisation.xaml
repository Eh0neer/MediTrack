<Window x:Class="mi.net2.autorisation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:mi.net2"
        mc:Ignorable="d"
        Title="Авторизация" Height="400" Width="350" WindowStartupLocation="CenterScreen" ResizeMode="CanResizeWithGrip" Background="LightGray">
    <Grid>
        <TextBlock Text="Вход" FontSize="30" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,26,0,299"/>
        <TextBlock Text="Логин" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,141,0,0" RenderTransformOrigin="6.331,1.129"/>
        <TextBlock Text="Пароль" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,193,0,0"/>
        <TextBox x:Name="password" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="94,192,0,0" Width="224"/>
        <TextBox x:Name="logins" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="94,140,0,0" Width="224" />
        <Button x:Name="enter" Grid.Row="0" Content="Войти" Foreground="Black" Background="GhostWhite" BorderBrush="Black" BorderThickness="1" Margin="32,255,32,61" Click="enter_Click" RenderTransformOrigin="0.548,-0.128"/>
    </Grid>
</Window>
